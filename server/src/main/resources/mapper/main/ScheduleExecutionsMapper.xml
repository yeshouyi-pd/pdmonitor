  <!-- 根据设备ID查询执行记录，左连接计划表 -->
  <select id="selectByDeviceIdWithSchedule" resultMap="ExecutionWithScheduleResultMap">
    SELECT 
      se.id,
      se.schedule_id,
      se.device_id,
      DATE_FORMAT(se.planned_time, '%Y-%m-%d %H:%i:%s') as planned_time,
      DATE_FORMAT(se.actual_time, '%Y-%m-%d %H:%i:%s') as actual_time,
      se.execution_status,
      se.error_message,
      DATE_FORMAT(se.created_at, '%Y-%m-%d %H:%i:%s') as created_at,
      ds.schedule_name,
      ds.start_time,
      ds.end_time,
      ds.duration_minutes,
      ds.repeat_type,
      ds.is_active,
      ds.is_running
    FROM schedule_executions se
    LEFT JOIN device_schedules ds ON se.schedule_id = ds.id
    WHERE se.device_id = #{deviceId}
    ORDER BY se.created_at DESC
